body {
    margin: 0;
    background-color: #000;
    color: #a9a9a9;
    font-family: 'Orbitron', sans-serif;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    position: relative;
}

canvas {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 0;
}

.container {
    position: relative;
    text-align: center;
    z-index: 2;
}

h1 {
    font-size: 3.5rem;
    text-shadow: 0 0 10px #a9a9a9, 0 0 20px #808080;
    animation: glitch 2s infinite alternate,
        neon 3s infinite alternate;
    margin-bottom: 0.5rem;
}

@keyframes neon {

    0%,
    100% {
        text-shadow: 0 0 5px #fff,
            0 0 10px #fff,
            0 0 15px #fff,
            0 0 20px #a9a9a9,
            0 0 30px #a9a9a9,
            0 0 40px #a9a9a9,
            0 0 50px #a9a9a9,
            0 0 75px #a9a9a9;
    }

    50% {
        text-shadow: 0 0 2px #fff,
            0 0 4px #fff,
            0 0 6px #fff,
            0 0 8px #a9a9a9,
            0 0 12px #a9a9a9,
            0 0 16px #a9a9a9,
            0 0 20px #a9a9a9,
            0 0 30px #a9a9a9;
    }
}

.beta {
    font-size: 1.2rem;
    color: #808080;
    text-shadow: 0 0 5px #808080, 0 0 10px #808080;
    animation: fadeInOut 2.5s infinite;
    margin-bottom: 1.5rem;
}

@keyframes glitch {
    0% {
        text-shadow: 3px 3px #808080, -3px -3px #a9a9a9;
    }

    50% {
        text-shadow: -3px -3px #808080, 3px 3px #a9a9a9;
    }

    100% {
        text-shadow: 3px -3px #808080, -3px 3px #a9a9a9;
    }
}

@keyframes fadeInOut {

    0%,
    100% {
        opacity: 0.5;
    }

    50% {
        opacity: 1;
    }
}

.button-container {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.play-button,
.ai-button {
    font-size: 1.5rem;
    padding: 1rem 2.5rem;
    border-radius: 40px;
    cursor: pointer;
    position: relative;
    overflow: hidden;
    transition: transform 0.15s, box-shadow 0.15s;
}

.play-button {
    background: none;
    border: 2px solid #808080;
    color: #808080;
    box-shadow: 0 0 5px rgba(128, 128, 128, 0.5);
    animation: pulse 1.5s infinite;
}

.ai-button {
    background: linear-gradient(45deg, #a9a9a9, #808080);
    border: none;
    color: white;
    box-shadow: 0 0 5px rgba(169, 169, 169, 0.5);
    animation: ai-pulse 1.2s infinite;
}

@keyframes pulse {

    0% {
        box-shadow: 0 0 5px rgba(128, 128, 128, 0.4);
    }

    50% {
        box-shadow: 0 0 15px rgba(128, 128, 128, 0.7);
    }

    100% {
        box-shadow: 0 0 5px rgba(128, 128, 128, 0.4);
    }
}

@keyframes ai-pulse {

    0%,
    100% {
        background: linear-gradient(45deg, #a9a9a9, #808080);
    }

    50% {
        background: linear-gradient(45deg, #808080, #a9a9a9);
    }
}

.play-button:hover,
.ai-button:hover {
    transform: scale(1.03);
    box-shadow: 0 0 20px rgba(169, 169, 169, 0.8);
}

.play-button:active,
.ai-button:active {
    transform: scale(0.97);
}

.grid {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(to right,
            rgba(128, 128, 128, 0.03) 1px,
            transparent 1px),
        linear-gradient(to bottom,
            rgba(128, 128, 128, 0.03) 1px,
            transparent 1px);
    background-size: 15px 15px;
    z-index: 1;
    animation: gridPan 20s linear infinite;
}

@keyframes gridPan {
    from {
        background-position: 0 0;
    }

    to {
        background-position: 100% 100%;
    }
}

.warp-distortion {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: radial-gradient(circle,
            transparent 10%,
            #808080 20%,
            transparent 30%);
    opacity: 0;
    pointer-events: none;
    animation: warp 0.8s ease-out;
    z-index: 3;
}

@keyframes warp {
    0% {
        transform: scale(0);
        opacity: 0.8;
    }

    100% {
        transform: scale(2.5);
        opacity: 0;
    }
}

.console {
    position: fixed;
    bottom: 10px;
    left: 10px;
    background: rgba(0, 0, 0, 0.6);
    color: #808080;
    padding: 8px;
    border-radius: 5px;
    z-index: 4;
    animation: slideInConsole 0.5s ease-out;
}

@keyframes slideInConsole {
    from {
        transform: translateY(50px);
        opacity: 0;
    }

    to {
        transform: translateY(0);
        opacity: 1;
    }
}

.console input {
    width: 200px;
    background: transparent;
    border: none;
    color: #808080;
    outline: none;
    caret-color: #808080;
    animation: blinkCaret 0.75s steps(5, start) infinite;
}

@keyframes blinkCaret {

    from,
    to {
        caret-color: transparent;
    }

    50% {
        caret-color: #808080;
    }
}
